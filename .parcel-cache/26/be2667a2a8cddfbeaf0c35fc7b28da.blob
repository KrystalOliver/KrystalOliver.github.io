@import url("https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&display=swap");
:root {
  --Playfair: "Playfair Display", serif;
  --Roboto: "Roboto", sans-serif;
  --light: #ECECEA ;
}

a:visited {
  color: black;
  text-decoration: none;
}

a:link {
  color: black;
  text-decoration: none;
}

.center {
  margin: auto;
  padding: 2rem;
  width: 60%;
}

.text__left {
  padding: 0;
  text-align: left;
}

.text__unbold {
  font-weight: normal;
}

.navbar {
  padding-top: 2rem;
  text-align: center;
}
@media (min-width: 700px) {
  .navbar {
    padding: 2.5rem 2.5rem 0 0;
    text-align: right;
  }
}

.nav__navbar a {
  display: inline-block;
  letter-spacing: 3px;
  padding: 0.4rem 0.1rem;
}

.nav__img {
  background-image: url("./Images.html/NavImg.jpg");
  background-repeat: no-repeat;
  background-size: 120rem 40rem;
}

.nav__img-small {
  background-image: url("./Images.html/NavBarSmall.jpg");
  background-repeat: no-repeat;
  background-size: 2000px 170px;
}

.nav__button {
  background-color: white;
  border: none;
  padding: 10px 30px;
  size: 30px;
  text-align: center;
  margin: 10px;
  font-family: var(--Playfair);
  font-size: 20px;
  border-radius: 50px;
}

.nav__button:hover {
  background-color: var(--light);
}

.header-banner__quotes {
  text-align: center;
  padding: 6rem 0 16rem 0;
}

.header__quotes-pill {
  background-color: white;
  font-family: var(--Playfair);
  padding: 8px 30px;
  font-size: 25px;
  display: inline-block;
  margin: 10px 20px;
  border-radius: 50px;
}
.header__quotes-pill h2 {
  margin: 10px 20px;
}

.content-front__wrapper {
  position: absolute;
  top: 26rem;
  margin: 17rem 0 10rem 2rem;
  justify-content: center;
}
@media (min-width: 700px) {
  .content-front__wrapper {
    grid-template-columns: repeat(2, 1fr);
    display: grid;
    column-gap: 1rem;
    margin: 2rem 8rem 0 8rem;
    position: static;
  }
}
@media (min-width: 1200px) {
  .content-front__wrapper {
    grid-template-columns: repeat(4, 1fr);
  }
}

.content-front__bg-color {
  background-color: var(--light);
  margin-bottom: 1rem;
  width: 25rem;
}

.content-about__layout {
  padding: 6rem 1rem 1rem 1rem;
  align-content: center;
}
@media (min-width: 700px) {
  .content-about__layout {
    padding: 6rem;
  }
}

.content-about__layout-inline {
  display: inline;
}

.content__text-small {
  font-family: var(--Roboto);
  font-size: 1rem;
  color: #a9a9a9;
}

.content__text-regular {
  font-family: var(--Roboto);
  font-size: 1.3em;
  padding: 1rem;
  letter-spacing: 1px;
  line-height: 27px;
}

.content__text-medium {
  font-weight: bold;
  font-size: 1.6rem;
  font-family: var(--Roboto);
}

.content__text-big {
  font-weight: bolder;
  font-size: 2.5rem;
  font-family: var(--Playfair);
  line-height: 30px;
  text-align: center;
  padding: 2rem;
}

.content-about__text-bgcolor {
  background-color: var(--light);
  padding: 2rem;
}
@media (min-width: 1200px) {
  .content-about__text-bgcolor {
    width: 30rem;
    margin: 0 1rem 0 10%;
    display: inline-block;
  }
}

.content-front__text-small {
  font-family: var(--Roboto);
  text-align: right;
  font-size: 0.7rem;
  opacity: 50%;
}

.content-front__text-small:hover {
  color: #a9a9a9;
}

.content-blogs__layout {
  margin: 5rem 0 5rem 2rem;
}
@media (min-width: 1000px) {
  .content-blogs__layout {
    margin: 5rem 10rem 10rem 6rem;
  }
}

.content-posts__text-name {
  font-weight: bold;
  font-size: 1.6rem;
  font-family: var(--Roboto);
}

.content-posts__text-name:hover {
  opacity: 60%;
}

.has-dropcap:first-letter {
  font-family: var(--Roboto);
  font-size: 10rem;
  line-height: 0.65;
  font-weight: bold;
  padding: 0.1em;
  float: left;
}

.image-front {
  width: 25rem;
  height: 19rem;
}

.image-front:hover {
  opacity: 80%;
}

.image-blog {
  width: 30rem;
}
@media (min-width: 1000px) {
  .image-blog {
    width: 56rem;
    height: 37rem;
  }
}

.image-about {
  width: 80%;
  display: inline-block;
}
@media (min-width: 900px) {
  .image-about {
    margin-left: 8rem;
    margin-right: 8rem;
  }
}
@media (min-width: 1200px) {
  .image-about {
    width: 33rem;
    margin-left: 0;
    display: inline-block;
  }
}

.image-blog__article {
  width: 24rem;
  padding: 10px;
}
@media (min-width: 1000px) {
  .image-blog__article {
    width: 32rem;
  }
}