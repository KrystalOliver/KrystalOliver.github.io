@import url("https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&display=swap");
:root {
  --Playfair: "Playfair Display", serif;
  --light: #ECECEA ;
}

.container h1 {
  color: blue;
}

.container-pill {
  background-color: var(--light);
  font-family: var(--Playfair);
  border: none;
  color: black;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  font-size: 25px;
  display: inline-block;
  margin: 4px 2px;
  border-radius: 16px;
}
.container-pill h2 {
  font-size: 40px;
  margin: 10px 2px;
}

.button {
  background-color: #ddd;
  border: none;
  color: black;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  margin: 4px 2px;
  font-family: var(--Playfair);
  border-radius: 16px;
}

.button:hover {
  background-color: #f1f1f1;
}

.bg-NavImg {
  background-image: url("~/Images/NavImg.jpg");
  display: block;
  background-repeat: no-repeat;
}

.navbar {
  padding: 2.5rem;
}

.navbar-brand {
  color: #fff;
  font-size: 2rem;
  display: block;
  text-align: center;
  text-decoration: none;
  font-family: var(--Playfair);
  letter-spacing: 1px;
}

.navbar-nav {
  padding: 0.8rem 0 0.2rem 0;
  text-align: center;
}

.navbar-nav a {
  font-family: var(--Playfair);
  letter-spacing: 1px;
  font-weight: 500;
  color: black;
  text-decoration: none;
  display: inline-block;
  padding: 0.4rem 0.1rem;
  letter-spacing: 3px;
  transition: opacity 0.5s ease;
}

.navbar-nav a:hover {
  opacity: 0.7;
}