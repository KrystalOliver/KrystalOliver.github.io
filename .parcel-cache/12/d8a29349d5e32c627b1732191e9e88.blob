@import url("https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&display=swap");
:root {
  --Playfair: "Playfair Display", serif;
  --light: #ECECEA ;
}

.container-pill {
  background-color: white;
  font-family: var(--Playfair);
  border: none;
  color: black;
  padding: 8px 30px;
  text-align: center;
  text-decoration: none;
  font-size: 25px;
  display: inline-block;
  margin: 10px 20px;
  border-radius: 50px;
}
.container-pill h2 {
  font-size: 35px;
  margin: 10px 20px;
}

.button {
  background-color: white;
  border: none;
  color: black;
  padding: 10px 30px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  margin: 10px 5px;
  font-family: var(--Playfair);
  font-size: 20px;
  border-radius: 50px;
}

.button:hover {
  background-color: var(--light);
}

.bg-NavImg {
  background-image: url("~/Images/NavImg.jpg");
  background-repeat: no-repeat;
  display: fixed;
}

.navbar {
  padding-top: 2.5rem;
  padding-right: 2.5rem;
  text-align: right;
}

.navbar-nav a {
  color: black;
  text-decoration: none;
  display: inline-block;
  padding: 0.4rem 0.1rem;
  letter-spacing: 3px;
}

.banner {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding-top: 6rem;
}

.container1 {
  width: 400px;
  height: 600px;
  background-color: var(--light);
  margin-top: 20rem;
  margin-left: 10rem;
}

.container2 {
  max-width: 410px;
  max-height: 530px;
  background-color: var(--light);
}

.container4 {
  max-width: 410px;
  max-height: 530px;
  background-color: var(--light);
}

.design-small-text {
  font-family: Georgia, "Times New Roman", Times, serif;
  color: black;
  text-align: right;
  font-size: 11px;
  letter-spacing: 1px;
  padding: 0px 8px;
}

.design-front-text {
  font-family: Georgia, "Times New Roman", Times, serif;
  color: black;
  text-align: left;
  font-size: 20px;
  padding: 10px 30px;
  letter-spacing: 1px;
  line-height: 35px;
}
.design-front-text h3 {
  font-size: 22px;
  text-align: center;
}

.design-img {
  max-width: 410px;
  height: 250px;
}