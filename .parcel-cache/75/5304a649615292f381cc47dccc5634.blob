@import url("https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&display=swap");
:root {
  --Playfair: "Playfair Display", serif;
  --light: #ECECEA ;
}

.container-pill {
  background-color: var(--light);
  font-family: var(--Playfair);
  border: none;
  color: black;
  padding: 10px 30px;
  text-align: center;
  text-decoration: none;
  font-size: 25px;
  display: inline-block;
  margin: 7px 5px;
  border-radius: 50px;
}
.container-pill h2 {
  font-size: 40px;
  margin: 10px 2px;
}

.button {
  background-color: var(--light);
  border: none;
  color: black;
  padding: 10px 30px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  margin: 7px 5px;
  font-family: var(--Playfair);
  font-size: 20px;
  border-radius: 50px;
}

.bg-NavImg {
  background-image: url("~/Images/NavImg.jpg");
  display: block;
  background-repeat: no-repeat;
}

.navbar {
  padding: 2.5rem;
}

.navbar-nav {
  padding: 0.8rem 0 0.2rem 0;
  text-align: right;
}

.navbar-nav a {
  color: black;
  text-decoration: none;
  display: inline-block;
  padding: 0.4rem 0.1rem;
  letter-spacing: 3px;
}

.navbar-nav a:hover {
  opacity: 0.7;
  background-color: #f1f1f1;
}

.banner {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
}

.banner-title {
  font-size: 3rem;
  font-family: var(--Playfair);
  line-height: 1.2;
}

.banner-title span {
  font-family: var(--Playfair);
  color: var(--exDark);
}

.banner p {
  padding: 1rem 0 2rem 0;
  font-size: 1.2rem;
  text-transform: capitalize;
  font-family: var(--Roboto);
  font-weight: 300;
  word-spacing: 2px;
}

.banner form {
  background: #fff;
  border-radius: 2rem;
  padding: 0.6rem 1rem;
  display: flex;
  justify-content: space-between;
}