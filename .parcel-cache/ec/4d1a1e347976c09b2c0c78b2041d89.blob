@import url("https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&display=swap");
:root {
  --Playfair: "Playfair Display", serif;
  --Roboto: "Roboto", sans-serif;
  --light: #ECECEA ;
}

.container-pill {
  background-color: white;
  font-family: var(--Playfair);
  border: none;
  color: black;
  padding: 8px 30px;
  text-align: center;
  text-decoration: none;
  font-size: 25px;
  display: inline-block;
  margin: 10px 20px;
  border-radius: 50px;
}
.container-pill h2 {
  font-size: 35px;
  margin: 10px 20px;
}

.button {
  background-color: white;
  border: none;
  color: black;
  padding: 10px 30px;
  size: 30px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  margin: 10px;
  font-family: var(--Playfair);
  font-size: 20px;
  border-radius: 50px;
}

.button:hover {
  background-color: var(--light);
}

.bg-NavImg {
  background-image: url("./Images.html/NavImg.jpg");
  background-size: 2000px 650px;
  background-repeat: no-repeat;
  display: fixed;
}

.bg-NavBarSmall {
  background-image: url("./Images.html/NavBarSmall.jpg");
  background-size: 2000px 170px;
  background-repeat: no-repeat;
  display: fixed;
}

.navbar {
  padding-top: 2.5rem;
  padding-right: 2.5rem;
  text-align: right;
}

.navbar-nav a {
  color: black;
  text-decoration: none;
  display: inline-block;
  padding: 0.4rem 0.1rem;
  letter-spacing: 3px;
}

.banner {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding-top: 6rem;
}

.container1 {
  margin-left: 10rem;
  margin-right: 10rem;
  margin-top: 17rem;
  margin-bottom: 10rem;
}

.container2 {
  background-color: var(--light);
  width: 400px;
  height: 600px;
  display: block;
  padding-bottom: 30px;
}

.containerBlogs {
  background-color: var(--light);
  margin-left: 10rem;
  margin-right: 28rem;
  margin-top: 5rem;
  margin-bottom: 10rem;
}

.containerAboutText {
  width: 800px;
  height: 1000px;
  background-color: var(--light);
  font-family: var(--Roboto);
  font-size: 1.3em;
  line-height: 50px;
  letter-spacing: 3px;
  margin-top: 7rem;
  margin-left: 90px;
  padding-left: 50px;
  padding-bottom: 20px;
  padding-right: 20px;
  display: inline-block;
}
.containerAboutText h3 {
  font-family: var(--Playfair);
  text-align: center;
  padding-top: 40px;
  padding-right: 20px;
  font-size: 2em;
}

.design-small-text {
  font-family: var(--Roboto);
  color: black;
  text-align: right;
  font-size: 11px;
  letter-spacing: 1px;
  padding: 0px 5px;
}

.design-small-text :hover {
  color: #a9a9a9;
}

.design-front-text {
  font-family: var(--Roboto);
  color: black;
  text-align: left;
  font-size: 20px;
  padding: 5px 15px;
  letter-spacing: 1px;
  line-height: 35px;
}
.design-front-text h3 {
  font-size: 22px;
  text-align: center;
}

.design-blog-text {
  font-family: var(--Roboto);
  color: black;
  text-align: left;
  font-size: 1.3em;
  padding: 5px 0px;
  letter-spacing: 3px;
  line-height: 50px;
}
.design-blog-text h3 {
  font-size: 40px;
  text-align: left;
  margin-bottom: 1px;
}
.design-blog-text h4 {
  font-size: 0.7em;
  color: #a9a9a9;
  padding: 0px;
  margin-bottom: 0px;
}
.design-blog-text b {
  font-size: 1.31em;
}

.first-letter {
  font-size: 40px;
  line-height: 70px;
}

.has-dropcap:first-letter {
  font-family: var(--Roboto);
  font-size: 10rem;
  line-height: 0.65;
  font-weight: bold;
  padding: 0.1em;
  float: left;
  margin: 0.2em 0.1em 0.1em 0.1em;
}

.design-imgMain {
  width: 400px;
  height: 300px;
}

.design-img :hover {
  transform: scale(1.1);
}

.design-imgBlog {
  width: 950px;
  height: 700px;
}

.design-imgAboutMe {
  width: 800px;
  float: right;
  margin-top: 7rem;
  margin-right: 90px;
}

.design-imgBlogContent {
  width: 500px;
}

.column {
  float: left;
  width: 33.333%;
  padding: 70px;
}

/* Clearfix (clear floats) */
.row::after {
  content: "";
  clear: both;
  display: table;
}

@media screen and (min-width: 992px) {
  .container1 {
    display: grid;
    grid-template-columns: repeat(4, 2fr);
    column-gap: 10px;
    align-items: center;
  }
}